<Window x:Class="Task2._1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2._1_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="320">
    <Grid >
        <Ellipse Height="100" Width="100" HorizontalAlignment="Left" VerticalAlignment ="Top" Margin="100,30,0,0" Fill="Red" Stroke="Black" StrokeThickness="3" Name="RedElipse"/>
        <Ellipse Height="100" Width="100" HorizontalAlignment="Left" VerticalAlignment ="Top" Margin="100,160,0,0" Fill="Gray" Stroke="Black" StrokeThickness="3" Name="YellowElipse"/>
        <Ellipse Height="100" Width="100" HorizontalAlignment="Left" VerticalAlignment ="Top" Margin="100,290,0,0" Fill="Gray" Stroke="Black" StrokeThickness="3" Name="GreenElipse"/>
        <Button  Height="50" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,420,0,0" Content="Next" Click="Button_Click"/>
    </Grid>
</Window>
