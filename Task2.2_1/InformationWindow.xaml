<Window x:Class="Task2._2_1.InformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2._2_1"
        mc:Ignorable="d"
        Title="О программе" Height="400" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <DockPanel>
        
        <TextBlock DockPanel.Dock="Top" Text="Простой текстовый редактор" FontSize="22" HorizontalAlignment="Center" Margin="5"/>

        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="10" >
            
            <TextBlock Text="Автор: Иванов Иван Иванович" />
            <TextBlock Text="Версия: 1.0" />
            <TextBlock Text="Дата создания 01.01.2025" />
            <Button Content="Закрыть" Margin="10" Click="CloseWindow_Click"/>

        </StackPanel>

        <Image Source="img/user.png"/>
    </DockPanel>
</Window>
