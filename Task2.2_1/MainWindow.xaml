<Window x:Class="Task2._2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2._2_1"
        mc:Ignorable="d"
        Title="Простой текстовый редактор" Height="450" MinHeight="200" Width="800" MinWidth="300" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Открыть" Margin="3" Padding="3" Click="Open_Click"/>
            <Button Content="Сохранить как" Margin="3" Padding="3" Click="Save_Click"/>
            <Button Content="О программе" Margin="3" Padding="3" Click="Information_Click"/>
        </StackPanel>
        <StatusBar DockPanel.Dock="Bottom" >
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="Готов"/>
            </StatusBarItem>
        </StatusBar>
        <ScrollViewer  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="MainTextBox" Margin="5" AcceptsReturn="True" AcceptsTab="True" />
        </ScrollViewer>
    </DockPanel>
</Window>
