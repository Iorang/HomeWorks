<Window x:Class="Task2._3_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2._3_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="320" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="5">
        <TextBlock x:Name="NameTextBox" Text="Имя студента:"/>
        <TextBox/>
        <TextBlock Text="Факультет:"/>
        <ComboBox Name="FacultyComboBox">
            <ComboBoxItem>Программирование</ComboBoxItem>
            <ComboBoxItem>Дизайн интерфейсов</ComboBoxItem>
        </ComboBox>
        <TextBlock Text="Доступные курсы:"/>
        <ListBox x:Name="CoursesListBox" SelectionMode="Multiple">
            <ListBoxItem>C#</ListBoxItem>
            <ListBoxItem>WPF</ListBoxItem>
            <ListBoxItem>Базы данных</ListBoxItem>
        </ListBox>
        <StackPanel Orientation="Horizontal">
            <CheckBox x:Name="PersonalDataCheckBox"/>
            <TextBlock Text="Я согласен на обработку персональных данных" Margin="5,0"/>
        </StackPanel>
        <Button Content="Записаться" Margin="5" Click="SaveButton_Click"/>
    </StackPanel>
</Window>
