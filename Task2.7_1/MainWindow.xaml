<Window x:Class="Task2._7_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2._7_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Window.Resources>
        <Style TargetType="CheckBox" >
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid  HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="18"/>
                            </Grid.RowDefinitions>
                            <Grid Width="20" Height="20">
                                <Rectangle RadiusX="3" RadiusY="3" Stroke="{TemplateBinding Background}" StrokeThickness="1"/>
                                <TextBlock x:Name="XTextBlock" Text="X" Opacity="0" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Foreground="{TemplateBinding Background}"/>
                                <Ellipse x:Name="IndeterminateEllipse" Width="5" Height="5" Opacity="0" Fill="{TemplateBinding Background}"/>
                            </Grid>

                            <TextBlock Grid.Row="1" Text="{TemplateBinding Name}"/>
                          
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="XTextBlock" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="{x:Null}">
                                <Setter TargetName="IndeterminateEllipse" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                    
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <CheckBox Grid.Column="1" Name="UnChecked" Background="DarkRed" IsChecked="False"/>
        <CheckBox Grid.Column="0" Name="Checked" Background="DarkRed" IsChecked="True" Margin="10" />
        <CheckBox Grid.Column="2" Name="Indeterminate" Background="DarkRed" IsChecked="{x:Null}"/>
    </Grid>
       

</Window>
