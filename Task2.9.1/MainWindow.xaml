<Window x:Class="Task2._9._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2._9._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="local:CustomCommands.ChangeColorCommand" Executed="ChangeColorExecuted" />
        <CommandBinding Command="Undo" Executed="UndoExecuted" CanExecute="UndoCanExecute"/>
    </Window.CommandBindings>
    <DockPanel x:Name="Dock">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Действия">
                <MenuItem Header="Изменить цвет" Command="local:CustomCommands.ChangeColorCommand"/>
                <MenuItem Header="Отменить" Command="Undo"/>
            </MenuItem>
        </Menu>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"
                    >
            <Button Content="Изменить  цвет" Command="local:CustomCommands.ChangeColorCommand"/>
            <Button Content="Отменить" Command="Undo"/>
        </StackPanel>
    </DockPanel>
</Window>
